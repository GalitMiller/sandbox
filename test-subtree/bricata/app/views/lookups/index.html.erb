<%= title "Lookup Sources" do -%>

	<%= menu_item "<span class='glyphicon glyphicon glyphicon-plus' aria-hidden='true'></span> Add Lookup Source".html_safe, new_lookup_path %>
	<%= render :partial => 'settings/menu' %>
	
<%- end -%>

<div id="lookups" class='grid_12 page boxit'>
	
	<table class='default' border="0" cellspacing="0" cellpadding="0">
		<tr>		
			<th>Menu Title</th>
			<th>URL</th>
			<th>Edit</th>
			<th>Destroy</th>
		</tr>
		<tbody class='lookups'>
			<%= render @lookups %>
		</tbody>
	</table>

	<%= pager(@lookups, Bricata::CONFIG[:baseuri] + '/lookups') %>
	
</div>


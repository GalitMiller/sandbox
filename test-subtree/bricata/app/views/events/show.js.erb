$('li#event_<%= @event.sid %><%= @event.cid %> .event-data').html("<%= escape_javascript(render(:partial => 'events/show')) %>");
$('li#event_<%= @event.sid %><%= @event.cid %> .event-data').slideDown('fast');

$('div.content').fadeTo(500, 1);
Bricata.helpers.remove_click_events(false);


$('body').on('click', '.popup-link', function(event) {
	event.preventDefault();
	window.open($(this).attr('href'), $(this).text(), 'height=800, width=600, scrollbars=1');
});
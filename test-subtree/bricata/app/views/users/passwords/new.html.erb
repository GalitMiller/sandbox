<%= title "Forgot your password?" -%>
<div id="content" class="content-box">
  <div class="content-box-title">
    Forgot Your Password?
  </div>
  <div class="content-box-body">
    <div id='password'>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'validate' }) do |f| %>

    <div class='login-note'>
      <i class="icon-question-sign"></i>
      Please enter your email and bricata will send you a reset URL. You will
      be prompted to submit a new password.
    </div>

    <p class='item'>
      <%= f.label :email %><br />
      <%= f.text_field :email, :title => 'E-mail...', :placeholder => 'example@example.com', :autocomplete => :off, :class => 'required email' %>
    </p>
      <button class="login-button login-default">Send me reset password instructions</button>
      <%= link_to 'Cancel', new_user_session_path, class: 'login-button', :"data-no-turbolink" => "true" %>
  <% end %>

  </div>
  </div>
</div>

<% if Bricata::Worker.problems? %>

	<%= drop_down_for('Worker Options', 'icons/worker.png', 'worker') do %>
	
		<% if Bricata::Worker.running? %>
			<%= drop_down_item "Start Sensor Cache Job", start_sensor_cache_settings_path unless Bricata::Jobs.sensor_cache? %>
			<%= drop_down_item "Start GeoIP Database Update Job", start_geoip_update_settings_path if (Setting.geoip? && !Bricata::Jobs.geoip_update?) %>
		<% else %>
			<%= drop_down_item "Start Worker", start_worker_settings_path %>
		<% end %>
		
	<% end %>

<% end %>

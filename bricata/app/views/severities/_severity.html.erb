<tr>
	<td class='first'><%= severity.sig_id %></td>
	<td><%= severity.name %></td>
	<td><%= severity.bg_color %></td>
	<td><%= severity.text_color %></td>
	<td><%= number_with_delimiter severity.signatures.count %></td>
	<td><%= number_with_delimiter severity.events_count %></td>
	<td><span class='severity-example' style='background-color:<%= severity.bg_color %>;color:<%= severity.text_color %>'><%= severity.sig_id %></span></td>
	<td><%= link_to "Edit", edit_severity_path(severity) %></td>
	
	<% if severity.locked? %>
		<td class='last'><%= image_tag('icons/lock.png') %></td>
	<% else %>
		<td class='last'><%= link_to image_tag("icons/destroy.png", :size => '16x16', :class => 'trash'), severity_path(severity), :method => :delete, :confirm => 'Are you sure you want to remove this severity?' %></td>
	<% end %>
	
</tr>

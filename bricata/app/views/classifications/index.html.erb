<%= title "Classification Settings" do -%>

	<%= menu_item "<span class='glyphicon glyphicon glyphicon-plus' aria-hidden='true'></span> Add Classification".html_safe, new_classification_path %>
	<%= render :partial => 'settings/menu' %>
	
<%- end -%>

<div id="classifications" class='grid_12 page boxit'>
	
	<table class='default' border="0" cellspacing="0" cellpadding="0">
		<tr>		
			<th>ID</th>
			<th>Name</th>
			<th>Event Count</th>
			<th>Event %</th>
			<th>Edit</th>
			<th>Destroy</th>
		</tr>
		<tbody class='classifications'>
			<%= render @classifications %>
		</tbody>
	</table>

	<%= pager(@classifications, Bricata::CONFIG[:baseuri] + '/classifications') %>
	
</div>

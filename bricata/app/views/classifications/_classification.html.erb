<tr>
	<td class='first'><%= classification.id %></td>
	<td><%= classification.name %></td>
	<td><%= number_with_delimiter classification.events_count %></td>
	
	<td class='chart'><%= css_chart(classification.event_percentage) %></td>
	
	<% if classification.locked %>
		<td><%= image_tag('icons/lock.png', :size => '16x16') %></td>
		<td class='last'><%= image_tag('icons/lock.png', :size => '16x16') %></td>
	<% else %>
		<td><%= link_to "Edit", edit_classification_path(classification) %></td>
		<td class='last'><%= link_to image_tag("icons/destroy.png", :size => '16x16', :class => 'trash'), classification_path(classification), :method => :delete, :confirm => 'Are you sure you want to remove this classification?' %></td>
	<% end %>
</tr>
